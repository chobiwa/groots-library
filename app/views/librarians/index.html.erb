<h1 style="text-align: center">Librarians list</h1>
<table style="margin-left:auto;margin-right: auto;">
  <thead>
  <tr>
    <th>Librarian name</th>
    <th>Email</th>
  </tr>
  </thead>

  <tbody>
  <% @librarians.each do |librarian| %>
    <tr>
      <td>
        <% if logged_in? && librarian==current_librarian %>
           <%=link_to librarian.name ,librarian%></td>
        <%else %>
          <%=librarian.name %>
        <%end %>
      <td><%= librarian.email %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<p style="text-align: center"><%= link_to 'All books' ,books_path %></p>
<p style="text-align: center"><%= link_to 'home' ,root_path %></p>
